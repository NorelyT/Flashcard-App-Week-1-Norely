<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@drawable/card_background1"
        android:elevation="25dp"
        android:text="@string/what_animal_can_regenerate_their_limbs"
        android:textSize="40sp"
        android:textColor="#E0C8F9" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@drawable/card_background2"
        android:elevation="25dp"
        android:text="@string/axolotl"
        android:textSize="40sp"
        android:textColor="#FEE4B8"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/flashcard_question"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="90dp"
        android:background="#FC90EC"
        android:gravity="center"
        android:elevation="25dp"
        android:text="@string/dolphin"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/option1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="90dp"
        android:background="#FC90EC"
        android:gravity="center"
        android:elevation="25dp"
        android:text="@string/alligator"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/option2"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="90dp"
        android:background="@color/pink"
        android:gravity="center"
        android:elevation="25dp"
        android:text="@string/axolotl"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/closedEye"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/eyecon_2" />

    <ImageView
        android:id="@+id/addButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/add_icon" />

</RelativeLayout>